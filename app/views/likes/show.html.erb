<div class="page-header">
  <h3>Like #<%= @like.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @like.user.present? %>
          <a href="/users/<%= @like.user_id %>">
            <%= @like.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>Photo</dt>
      <dd>
        <% if @like.photo.present? %>
          <a href="/photos/<%= @like.photo_id %>">
            <%= @like.photo.caption %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/likes" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @like.user %>
        <a href="/likes/<%= @like.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_like/<%= @like.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
